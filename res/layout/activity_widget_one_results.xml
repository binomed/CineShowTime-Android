<?xml version="1.0" encoding="utf-8"?>
<greendroid.widget.ActionBarHost
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@id/gd_action_bar_host"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	style="?attr/imgBackground" 
	android:orientation="vertical">

	<greendroid.widget.ActionBar
		style="@style/GreenDroid.Widget.ActionBar.Dashboard"
		android:id="@id/gd_action_bar"
		android:layout_height="@dimen/gd_action_bar_height"
		android:layout_width="fill_parent"
		android:background="?attr/gdActionBarBackground" />
	<FrameLayout
		android:id="@id/gd_action_bar_content_view"
		android:layout_height="0dp"
		android:layout_width="fill_parent"
		android:layout_weight="1">
		<RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    >
		    <!--     style="@style/Layouts.background"-->
		    <RelativeLayout
				android:id="@+id/resultHeader"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_marginBottom="10dip"
		    	android:background="@drawable/header"
		    	>
		    	 <ImageView 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:layout_centerHorizontal="true" 
					android:background="@drawable/logo_header"
					/>
		    </RelativeLayout>
			<ListView
		       android:id="@+id/resultWidgetListResult"
		       android:layout_width="fill_parent"
		       android:layout_height="fill_parent" 
		       android:layout_below="@+id/resultHeader" 
		       />
		</RelativeLayout>
	</FrameLayout>
</greendroid.widget.ActionBarHost>