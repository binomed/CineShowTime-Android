<?xml version="1.0" encoding="utf-8"?>
<greendroid.widget.ActionBarHost
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@id/gd_action_bar_host"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	style="?attr/imgBackground" 
	android:orientation="vertical">

	<greendroid.widget.ActionBar
		style="@style/GreenDroid.Widget.ActionBar.Dashboard"
		android:id="@id/gd_action_bar"
		android:layout_height="@dimen/gd_action_bar_height"
		android:layout_width="fill_parent"
		android:background="?attr/gdActionBarBackground" />
	<FrameLayout
		android:id="@id/gd_action_bar_content_view"
		android:layout_height="0dp"
		android:layout_width="fill_parent"
		android:layout_weight="1">
		<RelativeLayout
		   android:id="@+id/relativeLayoutId"
		   android:layout_width="fill_parent"
		   android:layout_height="fill_parent"
		   >
		<!-- <RelativeLayout
		   xmlns:android="http://schemas.android.com/apk/res/android"
		   android:id="@+id/relativeLayoutId"
		   android:layout_width="fill_parent"
		   android:layout_height="fill_parent"
			style="?attr/imgBackground" 
		   >-->
		   <!--     style="@style/Layouts.background"-->
			<!--  <ImageView 
					android:id="@+id/logoImg" 
					android:layout_below="@id/gd_action_bar"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:layout_alignParentTop="true"
					style="?attr/logoImg" 
					/>-->
			<ScrollView 
					android:id="@+id/FragmentLayout" 
					android:layout_below="@+id/logoImg"
					android:scrollbars="vertical"
					android:orientation="vertical" 
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent" 
						>
				<LinearLayout
						android:id="@+id/FragmentLayout" 
						android:orientation="vertical" 
						android:layout_height="fill_parent" 
						android:layout_width="fill_parent"
					 
					>
					<fragment 
							android:id="@+id/FragmentSearch" 
							android:name="com.binomed.showtime.android.screen.search.CineShowTimeSearchFragment" 
							android:layout_height="wrap_content"				
							android:layout_width="fill_parent"
							>
					    <!-- Preview: layout=@layout/fragment_search -->
					</fragment>
					<fragment 
							android:id="@+id/FragmentFav" 
							android:name="com.binomed.showtime.android.screen.fav.CineShowTimeFavFragment" 
							android:layout_height="200dip" 
							android:layout_width="fill_parent"
							>
					    <!-- Preview: layout=@layout/fragment_fav -->
					</fragment>
					<ImageView 
						android:id="@+id/logoSkyHook" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content" 
						android:background="@drawable/skyhookcolor_sm" 
						android:layout_alignParentBottom="true" 
						android:layout_centerHorizontal="true"
						/>
				</LinearLayout>
			</ScrollView>
			
		</RelativeLayout>
	</FrameLayout>
</greendroid.widget.ActionBarHost>