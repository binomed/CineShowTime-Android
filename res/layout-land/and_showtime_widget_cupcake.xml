<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/widget_cupcake" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/widget_bg_2_paysage"
	>
	<TextView
        android:id="@+id/widget_cupcake_theater_title"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:paddingLeft="20dip"        
        android:paddingRight="20dip"        
        android:paddingTop="2dip"        
        android:layout_marginBottom="5dip"
        android:includeFontPadding="false"
        android:ellipsize="end"
        android:maxLines="2"
        style="@style/Widget.TheaterTitle" />
    <LinearLayout    
  		android:id="@+id/widget_cupcake_films_group"
		android:orientation="vertical" 
		android:layout_width="fill_parent"
		android:layout_height="121dip"
		android:paddingTop="40dip"
		android:paddingLeft="20dip"
		android:paddingRight="20dip"
		>
    	<LinearLayout    
	  		android:id="@+id/widget_cupcake_group_movie_1"
			android:orientation="vertical" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
		    <TextView
		        android:id="@+id/widget_cupcake_movie_txt_1"
		       	android:layout_width="fill_parent" 
		        android:layout_height="wrap_content"
		        android:includeFontPadding="false"
		        android:lineSpacingMultiplier="0.9"
		        android:fadingEdge="vertical"
		        android:maxLines="1"
		        style="@style/Widget.Movie"  
		        />
		    <TextView
		        android:id="@+id/widget_cupcake_movie_hour_1"
		       	android:layout_width="fill_parent" 
		        android:layout_height="wrap_content"
		        android:includeFontPadding="false"
		        android:fadingEdge="vertical"
		        android:layout_gravity="right"
		        style="@style/Widget.Hour" 
		        />
	    </LinearLayout>
	    <LinearLayout    
	  		android:id="@+id/widget_cupcake_group_movie_2"
			android:orientation="vertical" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
		    <TextView
		        android:id="@+id/widget_cupcake_movie_txt_2"
		       	android:layout_width="fill_parent" 
		        android:layout_height="wrap_content"
		        android:includeFontPadding="false"
		        android:lineSpacingMultiplier="0.9"
		        android:fadingEdge="vertical"
		        android:maxLines="1"
		        style="@style/Widget.Movie"  
		        />
		    <TextView
		        android:id="@+id/widget_cupcake_movie_hour_2"
		       	android:layout_width="fill_parent" 
		        android:layout_height="wrap_content"
		        android:includeFontPadding="false"
		        android:layout_gravity="right"
		        style="@style/Widget.Hour" 
		        />
	    </LinearLayout>
	    <LinearLayout    
	  		android:id="@+id/widget_cupcake_group_movie_3"
			android:orientation="vertical" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
		    <TextView
		        android:id="@+id/widget_cupcake_movie_txt_3"
		       	android:layout_width="fill_parent" 
		        android:layout_height="wrap_content"
		        android:includeFontPadding="false"
		        android:lineSpacingMultiplier="0.9"
		        android:fadingEdge="vertical"
		        android:maxLines="1"
		        android:layout_gravity="right"
		        style="@style/Widget.Movie"  
		        />
		    <TextView
		        android:id="@+id/widget_cupcake_movie_hour_3"
		       	android:layout_width="fill_parent" 
		        android:layout_height="wrap_content"
		        android:includeFontPadding="false"
		        style="@style/Widget.Hour" 
		        />
	    </LinearLayout>
    </LinearLayout>
    <ImageButton  
        android:id="@+id/widget_cupcake_button_scroll_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/widget_cupcake_films_group"
        android:layout_marginLeft="10dip"        
        android:layout_marginRight="10dip"        
        android:paddingBottom="5dip" 
        android:background="@drawable/widget_btn_right"/>
	<ImageButton  
        android:id="@+id/widget_cupcake_button_scroll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_cupcake_films_group"
        android:layout_toLeftOf="@+id/widget_cupcake_button_scroll_right"
        android:paddingBottom="5dip"        
        android:background="@drawable/widget_btn_left" />
	<ImageButton  
		android:id="@+id/widget_cupcake_button_refresh"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/widget_cupcake_button_scroll_right"
		android:layout_below="@+id/widget_cupcake_films_group"
		android:paddingBottom="5dip" 
		android:background="@drawable/widget_btn_refresh"/>
</RelativeLayout>