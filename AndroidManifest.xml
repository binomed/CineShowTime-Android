<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.binomed.showtime" android:versionCode="17" android:versionName="1.8.1">
    <application android:label="@string/app_name" android:icon="@drawable/icon" android:debuggable="false">
        <activity android:label="@string/app_name" android:name=".android.activity.AndShowTimeMainActivity" android:icon="@drawable/icon">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    	<activity android:name=".android.searchnearactivity.AndShowTimeSearchNearActivity"></activity>
		<activity android:name=".android.movieactivity.AndShowTimeMovieActivity" android:launchMode="singleInstance"></activity>
		<service android:name=".android.searchnearactivity.AndShowTimeSearchNearService"></service>
		<service android:name=".android.movieactivity.AndShowTimeMovieService"></service>
		<activity android:name=".android.activity.AndShowTimePreferencesActivity"></activity>
		<activity android:name=".android.searchmovieactivity.AndShowTimeSearchMovieActivity"></activity>
		<service android:name=".android.searchmovieactivity.AndShowTimeSearchMovieService"></service>
		<service android:name=".android.service.AndShowCleanFileService"></service>
		<service android:name=".android.service.AndShowDBGlobalService"></service>
		
		<service android:name=".android.widget.AndShowTimeWidgetService"/>
		<service android:name=".android.widget.AndShowTimeWidgetServiceLeft"/>
		<service android:name=".android.widget.AndShowTimeWidgetServiceRight"/>
		<service android:name=".android.widget.AndShowTimeWidgetServiceRefresh"/>
		<service android:name=".android.widget.AndShowTimeWidgetServiceOpenMovie"/>
		<service android:name=".android.widget.AndShowTimeWidgetServiceOpenMovie1"/>
		<service android:name=".android.widget.AndShowTimeWidgetServiceOpenMovie2" />
		<service android:name=".android.widget.AndShowTimeWidgetServiceOpenMovie3" />
		<service android:name=".android.widget.cupcake.AndShowTimeWidgetService"/>
		<service android:name=".android.widget.cupcake.AndShowTimeWidgetServiceLeft"/>
		<service android:name=".android.widget.cupcake.AndShowTimeWidgetServiceRight"/>
		<service android:name=".android.widget.cupcake.AndShowTimeWidgetServiceRefresh"/>
		<service android:name=".android.widget.cupcake.AndShowTimeWidgetServiceOpenMovie"/>
		<service android:name=".android.widget.cupcake.AndShowTimeWidgetServiceOpenMovie1"/>
		<service android:name=".android.widget.cupcake.AndShowTimeWidgetServiceOpenMovie2" />
		<service android:name=".android.widget.cupcake.AndShowTimeWidgetServiceOpenMovie3" />
		<activity android:name=".android.widget.AndShowTimeWidgetConfigureActivity">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE">
				</action>
			</intent-filter>
		</activity>
		<activity android:name=".android.widget.cupcake.AndShowTimeWidgetConfigureActivity">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE">
				</action>
			</intent-filter>
		</activity>
		<receiver android:name=".android.widget.AndShowtimeWidget" android:label="@string/widget_name_2x2">
			<intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget" />
		</receiver>
		<receiver android:name=".android.widget.cupcake.AndShowtimeWidget" android:label="@string/widget_name_2x2_cupcake">
			<intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_cupcake" />
		</receiver>
	</application>
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="5"/>
	<!-- GPS Location -->
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
	<!-- Access net -->
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<!-- Call theater -->
	<uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>
	<!-- Check calendar for adding event -->
	<uses-permission android:name="android.permission.READ_CALENDAR"></uses-permission>
	<uses-permission android:name="android.permission.WRITE_CALENDAR"></uses-permission>
	<!-- ShyHook needs -->
	<!-- used to communicate with Skyhook's servers -->
	<!-- <uses-permission android:name="android.permission.INTERNET" />-->
	<!-- enables WiFi, if disabled, for the duration of a location request -->
	<uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
	<!-- used to obtain information about the WiFi environment -->
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<!-- used to obtain cell tower ID -->
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<!-- used to access GPS location, for XPS functionality -->
	<!-- <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />-->
	<uses-permission android:name="android.permission.WAKE_LOCK" />
</manifest> 