<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.binomed.showtime" android:versionCode="5" android:versionName="1.3.1">
    <application android:label="@string/app_name" android:icon="@drawable/icon" android:debuggable="false">
        <activity android:label="@string/app_name" android:icon="@drawable/icon" android:name=".android.activity.AndShowTimeMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    	<activity android:name=".android.searchnearactivity.AndShowTimeSearchNearActivity"></activity>
		<activity android:name=".android.movieactivity.AndShowTimeMovieActivity"></activity>
		<service android:name=".android.searchnearactivity.AndShowTimeSearchNearService"></service>
		<service android:name=".android.movieactivity.AndShowTimeMovieService"></service>
		<activity android:name=".android.activity.AndShowTimePreferencesActivity"></activity>
		<service android:name=".android.searchnearactivity.AndShowTimeSearchNearDBService"></service>
		<activity android:name=".android.searchmovieactivity.AndShowTimeSearchMovieActivity"></activity>
		<service android:name=".android.searchmovieactivity.AndShowTimeSearchMovieService"></service>
		<service android:name=".android.searchmovieactivity.AndShowTimeSearchMovieDBService"></service>
		<service android:name=".android.service.AndShowCleanFileService"></service>
		
		<service android:name=".android.widget.AndShowTimeWidgetService"/>
		<service android:name=".android.widget.AndShowTimeWidgetServiceLeft"/>
		<service android:name=".android.widget.AndShowTimeWidgetServiceRight"/>
		<service android:name=".android.widget.AndShowTimeWidgetServiceRefresh"/>
		<service android:name=".android.widget.AndShowTimeWidgetServiceOpenMovie"/>
		<service android:name=".android.widget.AndShowTimeWidgetServiceOpenMovie1"/>
		<service android:name=".android.widget.AndShowTimeWidgetServiceOpenMovie2" />
		<service android:name=".android.widget.AndShowTimeWidgetServiceOpenMovie3" />
		<activity android:name=".android.widget.AndShowTimeWidgetConfigureActivity">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE">
				</action>
			</intent-filter>
		</activity>
		<receiver android:name=".android.widget.AndShowtimeWidget" android:label="@string/widget_name_2x2">
			<intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget" />
		</receiver>
	</application>
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="5" android:maxSdkVersion="6"/>

	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	
	<uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>
	
	<uses-permission android:name="android.permission.SEND_SMS"></uses-permission>


<uses-permission android:name="android.permission.READ_CALENDAR"></uses-permission>
<uses-permission android:name="android.permission.WRITE_CALENDAR"></uses-permission>
</manifest> 