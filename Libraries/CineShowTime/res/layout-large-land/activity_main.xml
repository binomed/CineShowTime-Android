<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
	android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	>
	<LinearLayout
			android:orientation="horizontal" 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	       	android:layout_marginTop="@dimen/cstPaddingTopMain"
			android:layout_marginLeft="@dimen/cstPaddingLeftMain"
			android:layout_marginRight="@dimen/cstPaddingRightMain"
			android:layout_marginBottom="@dimen/cstPaddingBottomMain"
	        >
	  <ScrollView 
			android:scrollbars="vertical"
			android:orientation="vertical" 
            android:layout_width="0dp"
            android:layout_height="fill_parent" 
            android:layout_weight="40"
            android:layout_marginRight="20dip"
				>
		    <fragment class="com.binomed.showtime.android.screen.search.CineShowTimeSearchFragment"
		            android:id="@+id/fragmentSearch" 
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent" 
		            >
		    </fragment>
	    </ScrollView>
	    <fragment class="com.binomed.showtime.android.screen.fav.CineShowTimeFavFragment"
	            android:id="@+id/fragmentFav" 
	            android:layout_width="0dp"
	            android:layout_height="fill_parent" 
	            android:layout_weight="60"
	            android:layout_marginLeft="20dip"
	            android:layout_marginTop="17dip"
	            >
	    </fragment>
	
	    
	</LinearLayout>
</LinearLayout>
